<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel ="stylesheet"  href="/public/cardsStyles.css">
    <script src="/public/cardScript.js" defer></script>
    <title>Cards</title>
  </head>
    <body>
            <a href="/decks" id="backButton">Назад</a>
            <h1 style="color: white;">Колода <%=deckName%></h1>
            <% if (cardsArr.length > 0) { %>
              <button id="learningButton" dataDeckId="<%= deckId %>">Вивчати</button>
            <% } %>
            <table id="decksTable">
              <thead>
                <tr>
                  <th style="width: 10px;">№</th>
                  <th>Питання</th>
                  <th>Відповідь</th>
                  <th>Операції</th>
                </tr>
              </thead>
              <tbody>
                <% let i = 1; %>
                <% cardsArr.forEach(function(card) { %>
                  <tr> 
                    <td style="width: 10px;"><%=i%></td>
                    <td><%=card.question%></td>
                    <td><%=card.answer%></td>
                    <td style="padding:1px">
                      <div class="changeButtonsConteiner">
                        <button style="width: 100%;" dataDeckId="<%= deckId%>" dataCardId= "<%= card._id%>" class="deleteCard">Видалити</button> 
                      </div>    
                    </td>
                  </tr>
                  <%i++%>
                <% }) %>
              </tbody>
            </table>

            <div class="input_card">
              <form action="/cards/<%=deck._id%>" method="post"> 
                    <input required id = "inputQuestionCard_id" type="text" name = "question" placeholder="Введіть питання" autocomplete="off">
                    <input required id = "inputAnswerCard_id" type="text" name = "answer" placeholder="Введіть відповідь" autocomplete="off">
                <button id="addCard">Додати картку</button>
              </form>
            </div> 
            
    </body>     
</html>


