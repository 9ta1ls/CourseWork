<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel ="stylesheet"  href="public/decksStyles.css">
    <title>Колоди</title>
  </head>
    <body>
            <h1>Мої Колоди</h1>
            <table id="decksTable">
              <thead>
                <tr>
                  <th>Назва</th>
                  <th>Кількість карток</th>
                  <th>Операції</th>
                </tr>
              </thead>
              <tbody>
                <% decksArr.forEach(function(deck) { %>
                  <tr> 
                    <td><%= deck.name %></td>
                    <td><%= (deck.cardCount !== undefined ? deck.cardCount : 0) %></td>
                    <td>
                      <div class="buttonConteiner">
                          <button style="width: 90px;" dataDeckId= "<%= deck._id%>" class="deleteDeck">Видалити</button> 
                          <button style="width: 90px;" dataDeckId="<%= deck._id%>" class="changeDeck">Змінити</button> 
                      </div>              
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>

            <div class="input_deck">
              <form action="/Decks" method="post"> 
                <input required id = "inputDeck_id" type="text" name = "deckname" placeholder="Введіть назву колоди">
                <button id="addDeck">Додати Колоду</button>
              </form>
            </div> 
    </body>
    <script> 
    document.addEventListener('DOMContentLoaded', function() {
      const deleteButtons = document.querySelectorAll('.deleteDeck');
        deleteButtons.forEach(button => {
        button.addEventListener('click', async (event) => {
        const deckId = event.target.getAttribute("dataDeckId");
        console.log(deckId);
        try {
              const response = await fetch(`/Decks/${deckId}`, {
                  method: 'DELETE'
              });
 
            } catch (error) {
              console.error(error);
            }
            location.replace("/Decks");
          });
        });
    })
        
    </script>
</html>
